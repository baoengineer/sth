{
	"compilerOptions": {
		"module": "esnext",
		"moduleResolution": "node",
		"target": "es5",
		"rootDir": "src",
		"outDir": "./dist",
		"lib": ["dom", "dom.iterable", "esnext"],
		"jsx": "preserve",
		"declarationDir": "types",
		"declaration": true,
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"isolatedModules": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
